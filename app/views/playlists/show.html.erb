<h1><%= @playlist.title %></h1>
<h4><%= @playlist.description %></h4>

<p>
    <% @playlist.songs.each do |song| %>
        <%= link_to song.title, song_path(song) %>
        <br>
    <% end %>
</p>
<br>
<%= link_to 'Edit Playlist', edit_playlist_path %>
<br>
<%= link_to 'Add Song', new_playlist_song_path(@playlist, @playlist.songs) %>
<br>
<%= link_to 'Delete Playlist', playlist_path(@playlist), method:'delete' %>
<br>
<br>
<%= link_to 'Back to Playlists', playlists_path %>
<br>
<%= link_to 'All Songs', songs_path %>